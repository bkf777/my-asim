{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "experimentalDecorators": true,
        "moduleResolution": "Node",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "outDir": "dist",
        "lib": [
            "ES2019",
            "DOM"
        ]
    },
    "include": [
        "src"
    ]
}